.page-body-info {
  padding-bottom: 0;
  height: 230px;
  margin-bottom: -40%; /* 缩小底部间隙 */
}
.userinfo-avatar {
  border-radius: 114px;
  width: 114px;
  height: 114px;
}
.userinfo-nickname {
  margin-top: 10px;
  font-size: 19px;
}

.page-body-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.page-body-text {
  font-size: 18px;
  color: #888;
  margin-bottom: 10rpx;
  margin-top:20%;
  text-align: center; /* 对齐文本内容居中 */
}

.input-text {
  width: 100%;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  margin-bottom: 10rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  margin-top:-40%;
}

.tag-title-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: -10%; /* 缩小底部间隙 */
}
.tag {
  background-color: #007bff;
  color: #fff;
  padding: 6rpx 12rpx;
  border-radius: 5rpx;
  margin: 5rpx;
  cursor: pointer;
  transition: background-color 0.3s, transform 0.2s;
}
.tag-title {
  background: linear-gradient(to bottom, #007bff, #0056b3);
  color: #fff;
  font-weight: bold;
  padding: 8rpx 20%;
  border-radius: 5rpx;
  margin: 5rpx;
  cursor: pointer;
  font-size: 20px;
  transition: background-color 0.3s, transform 0.2s;
}
.tag:hover {
  background-color: #0056b3;
  transform: translateY(-3px);
}

.tag-tooltip {
  font-size: 12px;
  color: #777;
  margin-top: -5px;
}