.container {
  width: 100%;
  height: 150px;
  padding: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.page-body-text {
  font-size: 18px;
  color: #888;
  text-align: center;
}

.footer {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.footer-item {
  width: 100%;
  height: 100%;
  margin: 16px !important;
}

.tag-list {
  display: flex;
  flex-direction: row;
  padding: 0 16px 16px 16px;
}

.tag {
  display: flex;
  background: var(--weui-BTN-DEFAULT-BG);
  color: rgb(163, 163, 163);
  border-radius: 4px;
  margin: 0 4px;
  font-size: 22rpx;
  padding: 2px 8px;
}

.tag-selected {
  font-weight: 600;
}