.container {
  padding: 20rpx;
}

.input-container {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.input {
  flex: 1;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
}

.add-button {
  background-color: #007bff;
  color: #fff;
  padding: 6rpx 12rpx;
  border-radius: 5rpx;
  border: none;
  margin-left: 10rpx;
}

.tag-container {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  background-color: #eee;
  color: #333;
  padding: 6rpx 12rpx;
  margin: 5rpx;
  border-radius: 20rpx;
  cursor: pointer;
}
